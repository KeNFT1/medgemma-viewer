{
  "name": "lulos-not-a-health-copilot",
  "version": "1.0.0",
  "description": "Local medical image analysis - Don't take medical advice from a monkey",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "build": "electron-builder",
    "build:mac:arm64": "npm run download-ollama:mac:arm64 && electron-builder --mac --arm64",
    "build:mac:x64": "npm run download-ollama:mac:x64 && electron-builder --mac --x64",
    "build:win": "npm run download-ollama:win && electron-builder --win",
    "download-ollama:mac:arm64": "node scripts/download-ollama.js darwin arm64",
    "download-ollama:mac:x64": "node scripts/download-ollama.js darwin x64",
    "download-ollama:win": "node scripts/download-ollama.js win32 x64"
  },
  "build": {
    "appId": "com.lulo.healthcopilot",
    "productName": "Lulos NOT a Health Copilot",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "logo.png",
      "binaries/*"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "target": "dir"
    },
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0",
    "jest": "^29.7.0"
  }
}
