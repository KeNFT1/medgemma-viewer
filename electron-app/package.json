{
  "name": "medgemma-viewer",
  "version": "1.0.0",
  "description": "Local medical image analysis powered by MedGemma + Ollama",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.medgemma.viewer",
    "productName": "MedGemma Viewer",
    "files": [
      "main.js",
      "preload.js",
      "index.html"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "target": "dir"
    },
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0"
  }
}
