{
  "name": "lulos-not-a-health-copilot",
  "version": "1.0.0",
  "description": "Local medical image analysis - Don't take medical advice from a monkey",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.lulo.healthcopilot",
    "productName": "Lulos NOT a Health Copilot",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "logo.png"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "target": "dir"
    },
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.0.0",
    "jest": "^29.7.0"
  }
}